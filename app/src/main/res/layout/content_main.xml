<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity"
    android:id="@+id/container">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/loginFragment"
        android:name="com.example.tiferet.rebook.Fragments.MainActivityFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/newsFeedFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.tiferet.rebook.Fragments.NewsFeedFragment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout="@layout/news_feed_single_row" />
    <fragment
        android:id="@+id/singlePostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.tiferet.rebook.Fragments.SinglePostFragment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout="@layout/single_post_fragment" />
    <fragment
        android:id="@+id/myProfileFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.tiferet.rebook.Fragments.MyProfileFragment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout="@layout/my_profile_fragment" />
    <fragment
        android:id="@+id/addNewBookFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.tiferet.rebook.Fragments.AddNewBookFragment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout="@layout/add_new_book_fragment" />
    <fragment
        android:id="@+id/bookProgressFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.tiferet.rebook.Fragments.BookProgressFragment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout="@layout/book_progress_fragment" />
    <fragment
        android:id="@+id/updateBookProgressFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.tiferet.rebook.Fragments.UpdateBookProgressFragment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout="@layout/update_progress_fragment" />
    <fragment
        android:id="@+id/othersReviewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.tiferet.rebook.Fragments.OthersReviewFragment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout="@layout/others_review_fragment" />
    <fragment
        android:id="@+id/followingListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.tiferet.rebook.Fragments.FollowingListFragment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout="@layout/following_list_fragment" />
</FrameLayout>